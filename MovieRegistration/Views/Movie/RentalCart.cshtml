
@{
    ViewData["Title"] = "Rental Cart";
}

@model List<Movie>
<h1>Rental Cart</h1>
@if (Model.Count == 0)
{
    <p>Your cart is empty!</p>
    <p>Click <a href="MovieRental">here</a> to rent a movie.</p>
}
else
{
    <table class="table-primary">
        <tr>
            <th>
                ID
            </th>
            <th>
                Movie Title
            </th>
            <th>
                Genre
            </th>
            <th>
                Year
            </th>
            <th>
                Actors
            </th>
            <th>
                Directors
            </th>
            <th>
                Remove this movie
            </th>
        </tr>
        @foreach (Movie m in Model)
        {
            <tr>
                <td>
                    @m.ID
                </td>
                <td>
                    @m.MovieTitle
                </td>
                <td>
                    @m.Genre
                </td>
                <td>
                    @m.Year.Year
                </td>
                <td>
                    @m.Actors
                </td>
                <td>
                    @m.Directors
                </td>
                <td>
                    <a href="/Movie/RemoveMovie?titleKey=@m.MovieTitle">Remove it!</a>
                </td>
            </tr>
        }
    </table>
    <p>
        @{
            double total = Model.Count * 6.99;
        }
        Total: $@total
    </p>
    <p>
        <a href="Receipt">Check out</a>
    </p>
}